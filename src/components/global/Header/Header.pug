						a(href="#") SẢN PHẨM
					li 
						a(href="#") THỰC ĐƠN
					li 
						a(href="#") VĂN HOÁ CÀ PHÊ
					li 
						a(href="#") TUYỂN DỤNG
					li 
						a(href="#") LIÊN HỆ
			.header-right(class="lg:flex hidden items-center gap-2") 
				.header-language(class="flex items-center gap-1 text-Neutral-950 font-bold") 
					span VN
					.arrow-icon 
						i.fa-solid.fa-caret-down
				.header-search(class="w-12 h-12 inline-flex items-center justify-center flex-shrink-0 text-xl") 
					i.fa-regular.fa-magnifying-glass
			.header-right-mobile(class="flex lg:hidden items-center gap-2")
				.header-search-mobile
					.header-search-mobile-icon
						i.fa-regular.fa-magnifying-glass 
				.header-bar-mobile
					.header-bar 
						i.fa-solid.fa-bars
